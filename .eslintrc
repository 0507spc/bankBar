{
  "extends": [
    "standard",
    "plugin:prettier/recommended"
  ],
  "env": {
    "browser": true,
    "jest": true,
    "node": true
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "prettier/prettier": [
      "error",
      {
        "arrowParens": "always",
        "jsxBracketSameLine": true,
        "printWidth": 80,
        "singleQuote": true
      }
    ]
  }
}